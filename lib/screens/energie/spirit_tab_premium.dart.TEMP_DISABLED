import 'package:flutter/material.dart';
import 'dart:math' as math;
import '../../models/spirit_dashboard.dart';
import '../../services/spirit_dashboard_service.dart';
import '../../services/storage_service.dart';

/// üåü PREMIUM SPIRIT DASHBOARD - Professionelle Visualisierungen
/// Modern, Clean, Beeindruckend aber √ºbersichtlich
class SpiritTabPremium extends StatefulWidget {
  const SpiritTabPremium({super.key});

  @override
  State<SpiritTabPremium> createState() => _SpiritTabPremiumState();
}

class _SpiritTabPremiumState extends State<SpiritTabPremium> with SingleTickerProviderStateMixin {
  final _dashboardService = SpiritDashboardService();
  final _storage = StorageService();
  
  SpiritDashboard? _dashboard;
  bool _isLoading = true;
  late AnimationController _animationController;
  late Animation<double> _fadeAnimation;
  late Animation<double> _scaleAnimation;

  @override
  void initState() {
    super.initState();
    _animationController = AnimationController(
      duration: const Duration(milliseconds: 800),
      vsync: this,
    );
    _fadeAnimation = Tween<double>(begin: 0.0, end: 1.0).animate(
      CurvedAnimation(parent: _animationController, curve: Curves.easeOut),
    );
    _scaleAnimation = Tween<double>(begin: 0.95, end: 1.0).animate(
      CurvedAnimation(parent: _animationController, curve: Curves.easeOut),
    );
    _loadDashboard();
  }

  @override
  void dispose() {
    _animationController.dispose();
    super.dispose();
  }

  Future<void> _loadDashboard() async {
    setState(() => _isLoading = true);
    try {
      final profile = await _storage.loadEnergieProfile();
      final dashboard = _dashboardService.calculateDashboard(profile);
      setState(() {
        _dashboard = dashboard;
        _isLoading = false;
      });
      _animationController.forward();
    } catch (e) {
      setState(() => _isLoading = false);
    }
  }

  @override
  Widget build(BuildContext context) {
    return Container(
      decoration: const BoxDecoration(
        gradient: LinearGradient(
          begin: Alignment.topCenter,
          end: Alignment.bottomCenter,
          colors: [Color(0xFF1A1A2E), Color(0xFF0F0F1E)],
        ),
      ),
      child: _isLoading
          ? const Center(child: CircularProgressIndicator(color: Color(0xFF9C27B0)))
          : _dashboard == null
              ? _buildEmptyState()
              : FadeTransition(
                  opacity: _fadeAnimation,
                  child: ScaleTransition(
                    scale: _scaleAnimation,
                    child: CustomScrollView(
                      slivers: [
                        _buildModernHeader(),
                        SliverPadding(
                          padding: const EdgeInsets.all(20),
                          sliver: SliverList(
                            delegate: SliverChildListDelegate([
                              // ENERGETISCHE SIGNATUR - Radial Chart
                              _buildEnergeticSignatureCard(),
                              const SizedBox(height: 20),
                              
                              // ZYKLUS-TIMELINE - Horizontal Progress
                              _buildCycleTimelineCard(),
                              const SizedBox(height: 20),
                              
                              // ARCHETYPEN - Network Graph
                              _buildArchetypeNetworkCard(),
                              const SizedBox(height: 20),
                              
                              // ASTROLOGIE - Planetary Positions
                              _buildAstrologyCard(),
                              
                              const SizedBox(height: 100),
                            ]),
                          ),
                        ),
                      ],
                    ),
                  ),
                ),
    );
  }

  Widget _buildModernHeader() {
    return SliverAppBar(
      expandedHeight: 220,
      floating: false,
      pinned: true,
      backgroundColor: const Color(0xFF1A1A2E),
      flexibleSpace: FlexibleSpaceBar(
        background: Stack(
          fit: StackFit.expand,
          children: [
            // Animated Background
            CustomPaint(
              painter: _NebulaPainter(
                animation: _animationController,
                color: const Color(0xFF9C27B0),
              ),
            ),
            // Content
            SafeArea(
              child: Padding(
                padding: const EdgeInsets.fromLTRB(20, 40, 20, 20),
                child: Column(
                  crossAxisAlignment: CrossAxisAlignment.start,
                  children: [
                    const Text(
                      'SPIRIT',
                      style: TextStyle(
                        color: Colors.white,
                        fontSize: 32,
                        fontWeight: FontWeight.w900,
                        letterSpacing: 4,
                      ),
                    ),
                    const Text(
                      'DASHBOARD',
                      style: TextStyle(
                        color: Colors.white38,
                        fontSize: 18,
                        fontWeight: FontWeight.w300,
                        letterSpacing: 8,
                      ),
                    ),
                    const Spacer(),
                    // Live Stats Row
                    Row(
                      children: [
                        _buildLiveStatChip(
                          label: 'ENERGIE',
                          value: '${(_dashboard!.coreFrequency * 10).toInt()}%',
                          color: const Color(0xFF9C27B0),
                        ),
                        const SizedBox(width: 12),
                        _buildLiveStatChip(
                          label: 'PHASE',
                          value: 'Jahr ${_dashboard!.personalYear}',
                          color: const Color(0xFFE91E63),
                        ),
                        const SizedBox(width: 12),
                        _buildLiveStatChip(
                          label: 'BALANCE',
                          value: '${(_dashboard!.lifePathNumber * 11).toInt()}%',
                          color: const Color(0xFF673AB7),
                        ),
                      ],
                    ),
                  ],
                ),
              ),
            ),
          ],
        ),
      ),
    );
  }

  Widget _buildLiveStatChip({required String label, required String value, required Color color}) {
    return Container(
      padding: const EdgeInsets.symmetric(horizontal: 12, vertical: 6),
      decoration: BoxDecoration(
        color: color.withValues(alpha: 0.2),
        borderRadius: BorderRadius.circular(20),
        border: Border.all(color: color.withValues(alpha: 0.5), width: 1),
      ),
      child: Column(
        crossAxisAlignment: CrossAxisAlignment.start,
        children: [
          Text(
            label,
            style: TextStyle(
              color: color.withValues(alpha: 0.8),
              fontSize: 8,
              fontWeight: FontWeight.w600,
              letterSpacing: 1,
            ),
          ),
          Text(
            value,
            style: TextStyle(
              color: color,
              fontSize: 14,
              fontWeight: FontWeight.bold,
            ),
          ),
        ],
      ),
    );
  }

