      borderRadius: BorderRadius.circular(20),
      border: Border.all(
        color: Colors.white.withValues(alpha: 0.1),
        width: 1,
      ),
      boxShadow: [
        BoxShadow(
          color: const Color(0xFF9C27B0).withValues(alpha: 0.1),
          blurRadius: 20,
          spreadRadius: -5,
        ),
      ],
    );
  }

