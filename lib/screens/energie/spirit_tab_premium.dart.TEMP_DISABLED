  String _getYearMeaning(int year) {
    const meanings = {
      1: 'Jahr der Neuanf√§nge',
      5: 'Jahr der Ver√§nderung',
      7: 'Jahr der Spiritualit√§t',
      9: 'Jahr der Vollendung',
    };
    return meanings[year] ?? 'Jahr der Entwicklung';
  }

  String _getYearDescription(int year) {
    const descriptions = {
      1: 'Neue Projekte starten, mutige Schritte wagen',
      5: 'Flexibilit√§t √ºben, Abenteuer erleben',
      7: 'Innenschau, spirituelles Wachstum',
      9: 'Abschl√ºsse, Loslassen, Transformation',
    };
    return descriptions[year] ?? 'Pers√∂nliche Entwicklung im Fokus';
  }

  Widget _buildEmptyState() {
    return const Center(
      child: Text('Kein Profil gefunden', style: TextStyle(color: Colors.white60)),
    );
  }
}

// CUSTOM PAINTERS

class _NebulaPainter extends CustomPainter {
  final Animation<double> animation;
  final Color color;

  _NebulaPainter({required this.animation, required this.color}) : super(repaint: animation);

  @override
  void paint(Canvas canvas, Size size) {
    final paint = Paint()..style = PaintingStyle.fill;
    
    for (int i = 0; i < 3; i++) {
      final offset = animation.value * 2 * math.pi + i * math.pi / 1.5;
      paint.color = color.withValues(alpha: 0.05 + i * 0.02);
      canvas.drawCircle(
        Offset(
          size.width * (0.3 + i * 0.2),
          size.height * 0.4 + math.sin(offset) * 20,
        ),
        60 + i * 30,
        paint,
      );
    }
  }

  @override
  bool shouldRepaint(_NebulaPainter oldDelegate) => true;
}

class _RadialChartPainter extends CustomPainter {
  final List<double> values;
  final List<String> labels;
  final List<Color> colors;

  _RadialChartPainter({required this.values, required this.labels, required this.colors});

  @override
  void paint(Canvas canvas, Size size) {
    final center = Offset(size.width / 2, size.height / 2);
    final radius = math.min(size.width, size.height) / 2.5;
    
    for (int i = 0; i < values.length; i++) {
      final paint = Paint()
        ..color = colors[i].withValues(alpha: 0.3)
        ..style = PaintingStyle.fill;
      
      final angle = (i / values.length) * 2 * math.pi - math.pi / 2;
      final valueRadius = radius * values[i];
      
      canvas.drawCircle(
        Offset(
          center.dx + math.cos(angle) * valueRadius * 0.7,
          center.dy + math.sin(angle) * valueRadius * 0.7,
        ),
        30,
        paint,
      );
    }
  }

  @override
  bool shouldRepaint(_RadialChartPainter oldDelegate) => false;
}

class _CycleWavePainter extends CustomPainter {
  final int currentYear;
  final Color color;

  _CycleWavePainter({required this.currentYear, required this.color});

  @override
  void paint(Canvas canvas, Size size) {
    final paint = Paint()
      ..color = color.withValues(alpha: 0.3)
      ..style = PaintingStyle.stroke
      ..strokeWidth = 2;

    final path = Path();
    for (double x = 0; x <= size.width; x += 1) {
      final progress = x / size.width;
      final y = size.height / 2 + math.sin(progress * 2 * math.pi) * 40;
      if (x == 0) {
        path.moveTo(x, y);
      } else {
        path.lineTo(x, y);
      }
    }
    canvas.drawPath(path, paint);
  }

  @override
  bool shouldRepaint(_CycleWavePainter oldDelegate) => false;
}

class _ArchetypeNetworkPainter extends CustomPainter {
  final String primary, secondary, shadow;

  _ArchetypeNetworkPainter({required this.primary, required this.secondary, required this.shadow});

  @override
  void paint(Canvas canvas, Size size) {
    final paint = Paint()
      ..color = const Color(0xFF673AB7).withValues(alpha: 0.2)
      ..style = PaintingStyle.stroke
      ..strokeWidth = 1.5;

    // Draw connections
    canvas.drawLine(Offset(size.width / 2, size.height / 2), Offset(size.width * 0.2, size.height * 0.3), paint);
    canvas.drawLine(Offset(size.width / 2, size.height / 2), Offset(size.width * 0.8, size.height * 0.3), paint);
    canvas.drawLine(Offset(size.width / 2, size.height / 2), Offset(size.width * 0.5, size.height * 0.8), paint);
  }

  @override
  bool shouldRepaint(_ArchetypeNetworkPainter oldDelegate) => false;
}

class _PlanetarySystemPainter extends CustomPainter {
  @override
  void paint(Canvas canvas, Size size) {
    final center = Offset(size.width / 2, size.height / 2);
    
    // Sun
    canvas.drawCircle(center, 20, Paint()..color = const Color(0xFFFFD700).withValues(alpha: 0.5));
    
    // Orbits
    for (int i = 1; i <= 3; i++) {
      canvas.drawCircle(
        center,
        40.0 * i,
        Paint()
          ..color = Colors.white.withValues(alpha: 0.1)
          ..style = PaintingStyle.stroke
          ..strokeWidth = 1,
      );
    }
  }

  @override
  bool shouldRepaint(_PlanetarySystemPainter oldDelegate) => false;
}
