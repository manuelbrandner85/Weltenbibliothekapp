          const SizedBox(width: 8),
          Expanded(
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                Text(
                  sign['name'] as String,
                  style: const TextStyle(
                    color: Colors.white,
                    fontSize: 14,
                    fontWeight: FontWeight.w600,
                  ),
                ),
                const SizedBox(height: 2),
                Text(
                  '${sign['element']} ¬∑ ${sign['keywords']}',
                  style: const TextStyle(
                    color: Colors.white60,
                    fontSize: 11,
                  ),
                ),
              ],
            ),
          ),
        ],
      ),
    );
  }

  String _getElementIcon(String element) {
    switch (element) {
      case 'Feuer': return 'üî•';
      case 'Wasser': return 'üíß';
      case 'Luft': return 'üå¨Ô∏è';
      case 'Erde': return 'üåç';
      default: return '‚ú®';
    }
  }

  Color _getElementColor(String element) {
    switch (element) {
      case 'Feuer': return const Color(0xFFFF5252);
      case 'Wasser': return const Color(0xFF00BCD4);
      case 'Luft': return const Color(0xFF2196F3);
      case 'Erde': return const Color(0xFF4CAF50);
      default: return Colors.white;
    }
  }

  // üîÆ SYNCHRONIZIT√ÑTS-TRACKER CARD
  Widget _buildSynchronicityCard() {
    final recurringNumbers = _synchronicityService.detectRecurringNumbers(_syncEvents);
    final masterNumbers = _synchronicityService.detectMasterNumbers(_syncEvents);
    
    return Container(
      padding: const EdgeInsets.all(20),
      decoration: BoxDecoration(
        gradient: const LinearGradient(
          colors: [
            Color(0xFFFFD700),
            Color(0xFFFF9800),
          ],
        ),
        borderRadius: BorderRadius.circular(20),
      ),
      child: Column(
        crossAxisAlignment: CrossAxisAlignment.start,
        children: [
          Row(
            children: const [
              Icon(Icons.stars, color: Colors.white, size: 24),
              SizedBox(width: 12),
              Text(
                'SYNCHRONIZIT√ÑTS-TRACKER',
                style: TextStyle(
                  color: Colors.white,
                  fontSize: 16,
                  fontWeight: FontWeight.bold,
                  letterSpacing: 1.2,
                ),
              ),
            ],
          ),
          const SizedBox(height: 16),
          
          // Meisterzahlen
          if (masterNumbers.isNotEmpty) ...[
            const Text(
              'MEISTERZAHLEN',
              style: TextStyle(
                color: Colors.white,
                fontSize: 12,
                fontWeight: FontWeight.bold,
                letterSpacing: 1.5,
              ),
            ),
            const SizedBox(height: 8),
            Wrap(
              spacing: 8,
              runSpacing: 8,
              children: masterNumbers.map((num) => Container(
                padding: const EdgeInsets.symmetric(horizontal: 12, vertical: 6),
                decoration: BoxDecoration(
                  color: Colors.white.withValues(alpha: 0.3),
                  borderRadius: BorderRadius.circular(20),
                  border: Border.all(color: Colors.white),
                ),
                child: Text(
                  '$num',
                  style: const TextStyle(
                    color: Colors.white,
                    fontWeight: FontWeight.bold,
                  ),
                ),
              )).toList(),
            ),
            const SizedBox(height: 16),
          ],
          
          // Letzte Events
          const Text(
            'NEUESTE EREIGNISSE',
            style: TextStyle(
              color: Colors.white,
              fontSize: 12,
              fontWeight: FontWeight.bold,
              letterSpacing: 1.5,
            ),
          ),
          const SizedBox(height: 8),
          ..._syncEvents.take(3).map((event) => Container(
            margin: const EdgeInsets.only(bottom: 8),
            padding: const EdgeInsets.all(12),
            decoration: BoxDecoration(
              color: Colors.white.withValues(alpha: 0.2),
              borderRadius: BorderRadius.circular(12),
            ),
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                Text(
                  event.description,
                  style: const TextStyle(
                    color: Colors.white,
                    fontSize: 13,
                  ),
                ),
                const SizedBox(height: 4),
                Row(
                  children: [
                    ...List.generate(event.resonanceStrength, (i) => const Icon(
                      Icons.star,
                      color: Colors.white,
                      size: 12,
                    )),
                    const SizedBox(width: 8),
                    Text(
                      DateHelpers.getRealisticTimestamp(event.timestamp),
                      style: const TextStyle(
                        color: Colors.white70,
                        fontSize: 11,
                      ),
                    ),
                  ],
                ),
              ],
            ),
          )),
        ],
      ),
    );
  }

  // üìù INNERES JOURNAL CARD
