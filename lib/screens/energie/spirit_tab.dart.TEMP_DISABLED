  // ‚≠ê ASTROLOGISCHE GRUNDMATRIX CARD
  Widget _buildAstrologyCard() {
    final dashboard = _dashboard!;
    final profile = _storage.getEnergieProfile();
    if (profile == null) return const SizedBox.shrink();
    
    final sunSign = _astrologyService.getSunSign(profile.birthDate);
    final moonSign = _astrologyService.getMoonSign(profile.birthDate);
    final ascendant = _astrologyService.getAscendant(profile.birthDate, profile.birthTime);
    final elements = _astrologyService.getElementDistribution(profile.birthDate, profile.birthTime);
    
    return Container(
      padding: const EdgeInsets.all(20),
      decoration: BoxDecoration(
        gradient: LinearGradient(
          colors: [
            Color(sunSign['color'] as int).withValues(alpha: 0.3),
            const Color(0xFF1A1A1A),
          ],
        ),
        borderRadius: BorderRadius.circular(20),
      ),
      child: Column(
        crossAxisAlignment: CrossAxisAlignment.start,
        children: [
          Row(
            children: [
              Icon(sunSign['icon'] as IconData, color: Color(sunSign['color'] as int), size: 24),
              const SizedBox(width: 12),
              const Text(
                'DEINE ASTROLOGISCHE MATRIX',
                style: TextStyle(
                  color: Colors.white,
                  fontSize: 16,
                  fontWeight: FontWeight.bold,
                  letterSpacing: 1.2,
                ),
              ),
            ],
          ),
          const SizedBox(height: 16),
          
          // Sonnenzeichen
          _buildZodiacRow('‚òÄÔ∏è SONNE', sunSign),
          const SizedBox(height: 12),
          
          // Mondzeichen
          _buildZodiacRow('üåô MOND', moonSign),
          
          // Aszendent (optional)
          if (ascendant != null) ...[
            const SizedBox(height: 12),
            _buildZodiacRow('üåÖ ASZENDENT', ascendant),
          ],
          
          const SizedBox(height: 20),
          
          // Elementeverteilung
          Container(
            padding: const EdgeInsets.all(16),
            decoration: BoxDecoration(
              color: Colors.white.withValues(alpha: 0.1),
              borderRadius: BorderRadius.circular(12),
            ),
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                const Text(
                  'ELEMENTEVERTEILUNG',
                  style: TextStyle(
                    color: Colors.white,
                    fontSize: 12,
                    fontWeight: FontWeight.bold,
                    letterSpacing: 1.5,
                  ),
                ),
                const SizedBox(height: 12),
                ...elements.entries.map((e) => Padding(
                  padding: const EdgeInsets.only(bottom: 8),
                  child: Row(
                    children: [
                      Text(
                        _getElementIcon(e.key),
                        style: const TextStyle(fontSize: 16),
                      ),
                      const SizedBox(width: 8),
                      Expanded(
                        child: Stack(
                          children: [
                            Container(
                              height: 8,
                              decoration: BoxDecoration(
                                color: Colors.white.withValues(alpha: 0.2),
                                borderRadius: BorderRadius.circular(4),
                              ),
                            ),
                            FractionallySizedBox(
                              widthFactor: e.value / 3,
                              child: Container(
                                height: 8,
                                decoration: BoxDecoration(
                                  color: _getElementColor(e.key),
                                  borderRadius: BorderRadius.circular(4),
                                ),
                              ),
                            ),
                          ],
                        ),
                      ),
                      const SizedBox(width: 8),
                      Text(
                        '${e.value}',
                        style: const TextStyle(
                          color: Colors.white,
                          fontWeight: FontWeight.bold,
                        ),
                      ),
                    ],
                  ),
                )),
              ],
            ),
          ),
        ],
      ),
    );
  }

  Widget _buildZodiacRow(String label, Map<String, dynamic> sign) {
    return Container(
