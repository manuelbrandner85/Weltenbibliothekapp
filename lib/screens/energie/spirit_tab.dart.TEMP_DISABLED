/// Spirit-Tab f√ºr ENERGIE-Welt
class SpiritTab extends StatefulWidget {
  const SpiritTab({super.key});

  @override
  State<SpiritTab> createState() => _SpiritTabState();
}

class _SpiritTabState extends State<SpiritTab> {
  final _dashboardService = SpiritDashboardService();
  final _storage = StorageService();
  final _astrologyService = AstrologyService();
  final _synchronicityService = SynchronicityService();
  final _journalService = InnerJournalService();
  final _extendedWidgets = SpiritExtendedWidgets();
  final _toolCards = SpiritToolCards();
  
  SpiritDashboard? _dashboard;
  EnergieProfile? _profile;
  bool _isLoading = true;
  List<SynchronicityEvent> _syncEvents = [];
  List<InnerJournalEntry> _journalEntries = [];

  @override
  void initState() {
    super.initState();
    _loadDashboard();
  }

  Future<void> _loadDashboard() async {
    setState(() => _isLoading = true);
    
    try {
      final profile = await _storage.loadEnergieProfile();
      if (profile == null) {
        setState(() => _isLoading = false);
        return;
      }
      
      final dashboard = await _dashboardService.calculateDashboard(profile);
      
      // Load Synchronicity & Journal Data
      final syncEvents = SynchronicityService.getDemoEvents();
      final journalEntries = InnerJournalService.getDemoEntries();
      
      setState(() {
        _profile = profile;
        _dashboard = dashboard;
        _syncEvents = syncEvents;
        _journalEntries = journalEntries;
        _isLoading = false;
      });
    } catch (e) {
      setState(() => _isLoading = false);
    }
  }

