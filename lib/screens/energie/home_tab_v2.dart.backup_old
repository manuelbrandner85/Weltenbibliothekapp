  Future<void> _calculateDashboardData(EnergieProfile profile) async {
    // Level & XP (aus Storage oder berechnet)
    final userProgress = await StorageService().getCurrentXP();
    _currentXP = userProgress;
    _currentLevel = await StorageService().getCurrentLevel();
    _xpToNextLevel = await StorageService().getXPForNextLevel();
    
    // Streak
    _streak = await StorageService().getCurrentStreak();
    
    // Progress Ring
    final meditationSessions = StorageService().getEnhancedMeditationSessions();
    final todayMeditation = meditationSessions.where((s) {
      final date = DateTime.parse(s['timestamp'] as String);
      final now = DateTime.now();
      return date.year == now.year && date.month == now.month && date.day == now.day;
    }).isNotEmpty;
    _meditationProgress = todayMeditation ? 1.0 : 0.0;
    
    final journalEntries = StorageService().getNumerologyJournalEntries();
    final todayJournal = journalEntries.where((e) {
      final date = DateTime.parse(e['timestamp'] as String);
      final now = DateTime.now();
      return date.year == now.year && date.month == now.month && date.day == now.day;
    }).isNotEmpty;
    _journalProgress = todayJournal ? 1.0 : 0.0;
    
    // Tools Progress (aus Tool-Nutzung heute)
    final toolBox = await StorageService().getBox('tool_streaks');
    final todayToolUse = toolBox.values.where((streak) {
      final lastUse = streak['lastUsed'] as String?;
      if (lastUse == null) return false;
      final date = DateTime.parse(lastUse);
      final now = DateTime.now();
      return date.year == now.year && date.month == now.month && date.day == now.day;
    }).length;
    _toolsProgress = todayToolUse > 0 ? (todayToolUse / 5).clamp(0.0, 1.0) : 0.0;
    
    // Social Progress (aus Community-Posts heute)
    final communityBox = await StorageService().getBox('community_posts');
    final todayPosts = communityBox.values.where((post) {
      final timestamp = post['timestamp'] as int?;
      if (timestamp == null) return false;
      final date = DateTime.fromMillisecondsSinceEpoch(timestamp);
      final now = DateTime.now();
      return date.year == now.year && date.month == now.month && date.day == now.day;
    }).length;
    _socialProgress = todayPosts > 0 ? (todayPosts / 3).clamp(0.0, 1.0) : 0.0;
    
    // Numerology Calculation (echte Berechnung)
    final birthDate = profile.birthDate;
    _lifePath = _calculateLifePath(birthDate);
    _soulNumber = _calculateSoulNumber(profile.firstName);
    _expressionNumber = _calculateExpressionNumber('${profile.firstName} ${profile.lastName}');
    
    // Meditation Stats (echte Daten)
    _totalMeditationMinutes = await _getTotalMeditationMinutes();
    _meditationStreak = await StorageService().getCurrentStreak();
    
    // Chakra Balance (echte Daten)
    final now = DateTime.now();
    final chakraScores = StorageService().getChakraDailyScores(now);
    if (chakraScores != null) {
      _chakraBalance = chakraScores['overallBalance'] as int? ?? 0;
      _dominantChakra = chakraScores['dominantChakra'] as String? ?? 'Unbekannt';
    }
    
    // Synchronicity Stats (echte Daten)
    final syncBox = await StorageService().getBox('synchronicity_entries');
    _todaySynchronicities = syncBox.values.where((entry) {
      final timestamp = entry['timestamp'] as int?;
      if (timestamp == null) return false;
      final date = DateTime.fromMillisecondsSinceEpoch(timestamp);
      return date.year == now.year && date.month == now.month && date.day == now.day;
    }).length;
    
    final weekAgo = now.subtract(const Duration(days: 7));
    _weekSynchronicities = syncBox.values.where((entry) {
      final timestamp = entry['timestamp'] as int?;
      if (timestamp == null) return false;
      final date = DateTime.fromMillisecondsSinceEpoch(timestamp);
      return date.isAfter(weekAgo);
    }).length;
    
    // Trends
    _trends = {
      'chakraBalance': '+12%',
      'meditationStreak': _streak,
      'journalEntries': journalEntries.length,
      'communityActivity': 3,
    };
    
    // Daily Challenges
    _dailyChallenges = [
      {'label': '10 Min Meditation', 'xp': 10, 'completed': todayMeditation},
      {'label': 'Journal-Eintrag', 'xp': 5, 'completed': todayJournal},
      {'label': 'Chakra-Check', 'xp': 5, 'completed': chakraScores != null},
    ];
  }
  
