  // ECHTE DATEN BERECHNUNGEN
  // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
  
  int _calculateLifePath(DateTime birthDate) {
    int sum = birthDate.day + birthDate.month + birthDate.year;
    while (sum > 9 && sum != 11 && sum != 22 && sum != 33) {
      sum = sum.toString().split('').map(int.parse).reduce((a, b) => a + b);
    }
    return sum;
  }
  
  int _calculateSoulNumber(String name) {
    const vowels = 'AEIOU';
    final values = {'A': 1, 'E': 5, 'I': 9, 'O': 6, 'U': 3};
    int sum = 0;
    for (var char in name.toUpperCase().split('')) {
      if (vowels.contains(char)) {
        sum += values[char] ?? 0;
      }
    }
    while (sum > 9 && sum != 11 && sum != 22 && sum != 33) {
      sum = sum.toString().split('').map(int.parse).reduce((a, b) => a + b);
    }
    return sum;
  }
  
  int _calculateExpressionNumber(String fullName) {
    const letters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ';
    int sum = 0;
    for (var char in fullName.toUpperCase().replaceAll(' ', '').split('')) {
      if (letters.contains(char)) {
        sum += (letters.indexOf(char) % 9) + 1;
      }
    }
    while (sum > 9 && sum != 11 && sum != 22 && sum != 33) {
      sum = sum.toString().split('').map(int.parse).reduce((a, b) => a + b);
    }
    return sum;
  }
  
  Future<int> _getTotalMeditationMinutes() async {
    final sessions = StorageService().getEnhancedMeditationSessions();
    int total = 0;
    for (var session in sessions) {
      total += session['duration'] as int? ?? 0;
    }
    return total;
  }
  
