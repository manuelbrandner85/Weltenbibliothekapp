    );
    
    if (result != null && result.isNotEmpty && result != currentText) {
      try {
        final response = await http.put(
          Uri.parse('${CloudflareApiService.reactionsApiUrl}/chat/messages/$messageId'),
          headers: {'Content-Type': 'application/json'},
          body: jsonEncode({'message': result}),
        );
        
        if (response.statusCode == 200) {
          await _loadMessages(silent: true);
          if (mounted) {
            ScaffoldMessenger.of(context).showSnackBar(
              const SnackBar(
                content: Text('âœ… Nachricht bearbeitet!'),
                backgroundColor: Colors.green,
              ),
            );
          }
        }
      } catch (e) {
        if (mounted) {
          ScaffoldMessenger.of(context).showSnackBar(
            SnackBar(content: Text('âŒ Fehler: $e'), backgroundColor: Colors.red),
          );
        }
      }
    }
  }

