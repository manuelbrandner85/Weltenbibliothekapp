  void _addReaction(Map<String, dynamic> msg, String emoji) {
    final messageId = msg['id']?.toString() ?? msg['timestamp']?.toString() ?? '';
    
    setState(() {
      if (_messageReactions[messageId] == null) {
        _messageReactions[messageId] = {};
      }
      
      if (_messageReactions[messageId]![emoji] == null) {
        _messageReactions[messageId]![emoji] = [];
      }
      
      final userList = _messageReactions[messageId]![emoji]!;
      if (userList.contains(_userId)) {
        userList.remove(_userId);
        if (userList.isEmpty) {
          _messageReactions[messageId]!.remove(emoji);
        }
      } else {
        userList.add(_userId);
      }
    });
    
    // TODO: Send to server
    if (kDebugMode) {
      debugPrint('ğŸ†• Reaction: $emoji on message $messageId');
    }
  }
  
