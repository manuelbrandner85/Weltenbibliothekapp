    } else {
      debugPrint('â­ï¸  No changes detected');
    }
    
    // ğŸš¨ PROFIL-CHECK: Wenn kein Username, zeige Popup-Warnung (nur einmal!)
    if (_username.isEmpty && mounted && !_profileDialogShown) {
      _profileDialogShown = true; // âœ… Setze Flag, damit Popup nicht mehrmals erscheint
      WidgetsBinding.instance.addPostFrameCallback((_) {
