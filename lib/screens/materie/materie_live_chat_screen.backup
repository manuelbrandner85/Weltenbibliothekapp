  Future<void> _toggleVoiceRoom() async {
    if (_isInVoiceRoom) {
      await _voiceService.leaveVoiceRoom();
      setState(() {
        _isInVoiceRoom = false;
        _voiceParticipants = [];
      });
      _showSnackBar('ğŸ”‡ Voice Room verlassen', Colors.grey);
    } else {
      final success = await _voiceService.joinVoiceRoom(_selectedRoom, _userId, _username);
      if (success) {
        setState(() {
          _isInVoiceRoom = true;
        });
        _showSnackBar('ğŸ¤ Voice Room beigetreten', Colors.red);
      } else {
        _showSnackBar('âŒ Fehler beim Beitreten', Colors.red);
      }
    }
  }
  
  Future<void> _toggleMute() async {
    await _voiceService.toggleMute();
    setState(() {
      _isMuted = !_isMuted;
