          _avatarUrl = profile.avatarUrl; // ğŸ†• Load avatar URL
        });
        _notificationService.setCurrentUsername(_username);
        if (kDebugMode) {
          debugPrint('âœ… Username aus Materie-Profil geladen: $_username');
        }
      } else {
        // ğŸ†• KEIN PROFIL: Zeige Username-Dialog (nur einmal)
        if (kDebugMode) {
          debugPrint('âš ï¸ Kein Materie-Profil gefunden, zeige Username-Dialog');
