  Future<void> _sendMessage() async {
    final text = _messageController.text.trim();
    if (text.isEmpty) return;
    
    // ğŸš¨ USERNAME-CHECK: Verhindere Senden ohne Profil
    if (_username.isEmpty) {
      if (mounted && !_profileDialogShown) {
        _profileDialogShown = true; // âœ… Setze Flag sofort
        _showUsernameDialog();
      }
      return;
    }

    try {
      // Sende Nachricht
      await _api.sendChatMessage(
        roomId: _selectedRoom,
        realm: 'materie',
        userId: _userId,
        username: _username,
        message: text,
        avatarEmoji: _avatarEmoji, // ğŸ†• Send avatar emoji
        avatarUrl: _avatarUrl, // ğŸ†• Send avatar URL
      );
      
      _messageController.clear();
      
      // âœ… WICHTIG: Warte kurz, dann lade Nachrichten neu
      await Future.delayed(const Duration(milliseconds: 500));
      await _loadMessages();
      
      if (kDebugMode) {
        debugPrint('âœ… Nachricht gesendet und Chat aktualisiert');
      }
    } catch (e) {
      if (kDebugMode) {
        debugPrint('âŒ Fehler beim Senden: $e');
      }
      if (mounted) {
        ScaffoldMessenger.of(context).showSnackBar(
          SnackBar(
            content: Text('Fehler beim Senden: $e'),
            backgroundColor: Colors.red,
          ),
        );
      }
    }
  }
  
