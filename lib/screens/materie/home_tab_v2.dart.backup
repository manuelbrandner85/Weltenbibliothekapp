  Future<void> _calculateDashboardData(MaterieProfile profile) async {
    // ğŸ”„ NEW: Get real stats from UserStatsService
    final stats = await _userStatsService.getUserStats();
    
    // Level & XP (aus Storage)
    _currentXP = await StorageService().getCurrentXP();
    _currentLevel = await StorageService().getCurrentLevel();
    _xpForNextLevel = (_currentLevel * 100);
    _streak = stats.currentStreak; // ğŸ”„ Real streak from stats
    
    // Progress Ring - Echte Daten
    final now = DateTime.now();
    
    // Research Progress (aus research_topics)
    final researchBox = await StorageService().getBox('research_topics');
    final todayResearch = researchBox.values.where((topic) {
      final timestamp = topic['timestamp'] as int?;
      if (timestamp == null) return false;
      final date = DateTime.fromMillisecondsSinceEpoch(timestamp);
      return date.year == now.year && date.month == now.month && date.day == now.day;
    }).length;
    _researchProgress = todayResearch > 0 ? (todayResearch / 5).clamp(0.0, 1.0) : 0.0;
    
    // Reading Progress (kÃ¶nnte aus journal oder reading tracker kommen)
    _readingProgress = 0.0; // TODO: Implement reading tracker
    
    // Analysis Progress
    _analysisProgress = 0.0; // TODO: Implement analysis tracker
    
    // Publishing Progress (aus community_posts)
    final communityBox = await StorageService().getBox('community_posts');
    final todayPosts = communityBox.values.where((post) {
      final timestamp = post['timestamp'] as int?;
      if (timestamp == null) return false;
      final date = DateTime.fromMillisecondsSinceEpoch(timestamp);
      return date.year == now.year && date.month == now.month && date.day == now.day;
    }).length;
    _publishingProgress = todayPosts > 0 ? (todayPosts / 3).clamp(0.0, 1.0) : 0.0;
    
    // Quick Stats - ğŸ”„ Real Data from UserStatsService
    _totalResearches = stats.totalSessions; // Map sessions to research
    _totalSources = stats.activeChallenges; // Map challenges to sources
    _totalAnalyses = stats.completedChallenges; // Map completed challenges to analyses
    _totalPublications = communityBox.length;
    
    // Daily Challenges - mit echten Completion States
    _challenges = [
      {
        'title': '3 Quellen recherchieren',
        'xp': 50,
        'completed': todayResearch >= 3,
        'icon': Icons.search
      },
      {
        'title': '1 Analyse erstellen',
        'xp': 100,
        'completed': false, // TODO: Check analysis completion
        'icon': Icons.analytics
      },
      {
        'title': '30 Min Lesen',
        'xp': 75,
        'completed': false, // TODO: Check reading time
        'icon': Icons.auto_stories
      },
      {
        'title': 'Faktencheck durchfÃ¼hren',
        'xp': 80,
        'completed': false, // TODO: Check fact-check completion
        'icon': Icons.fact_check
      },
    ];
  }

  void _handleActionTap(String label) {
    Widget? targetScreen;
    
    switch (label) {
      case 'Recherche':
        targetScreen = const MaterieResearchScreen();
        break;
      case 'Quellen':
        // Navigate to Sources (research archive)
        targetScreen = const ResearchArchiveScreen(roomId: 'materie_research');
        break;
      case 'Analyse':
        // Show analysis tools (Materie Tools Screen)
        targetScreen = const MaterieToolsScreen();
        break;
      case 'Timeline':
        targetScreen = const HistoryTimelineScreen(roomId: 'materie_timeline');
        break;
      case 'Fakten':
        // Show fact-check tools (Propaganda Detector)
        targetScreen = const PropagandaDetectorScreen();
        break;
      case 'Matrix':
        // Show knowledge matrix (Materie Karte Pro)
        targetScreen = const MaterieKarteTabPro();
        break;
    }
    
    if (targetScreen != null) {
      Navigator.push(
        context,
        AppPageTransitions.slideFromRight(targetScreen!),  // ğŸ¨ NEW: Premium Transition
      );
    }
  }

