  void _addTag(String tag) {
    final current = _tagsController.text;
    final tags = current.isEmpty ? [] : current.split(',').map((t) => t.trim()).toList();
    if (!tags.contains(tag)) {
      tags.add(tag);
      _tagsController.text = tags.join(', ');
    }
  }
  
